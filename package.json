{
  "name": "webext-gesture",
  "description": "Mouse gestures for web browser.",
  "private": true,
  "version": "0.1.4",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "pack:crx": "crx pack .output/chrome-mv3 -o webext-gesture.crx -p ./key.pem",
    "build:prepare": "tsx ./scripts/prepare.ts",
    "postinstall": "wxt prepare",
    "release": "x-release --publish false"
  },
  "dependencies": {
    "@vueuse/core": "^14.1.0",
    "@webext-core/proxy-service": "^1.2.1",
    "vue": "^3.5.25"
  },
  "devDependencies": {
    "@0x-jerry/x-release": "^2.4.1",
    "@types/chrome": "^0.1.32",
    "@wxt-dev/module-vue": "^1.0.3",
    "crx": "^5.0.1",
    "less": "^4.4.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "wxt": "^0.20.11"
  }
}